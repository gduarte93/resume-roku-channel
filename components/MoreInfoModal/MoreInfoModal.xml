                fieldToInterp="background.width"
            />
        </Animation> -->

        <Label
            id="title"
            width="1000"
            translation="[200, 20]"
            text="title"
            font="font:LargeBoldSystemFont"
        />
        <Label
            id="subtitle"
            width="1000"
            translation="[200, 40]"
            text="subtitle"
            font="font:LargeBoldSystemFont"
        />
        <Label
            id="workTitle"
            width="1000"
            translation="[20, 200]"
            text="workTitle"
            font="font:LargeBoldSystemFont"
        />

        <Notes
            id="notes"
        />
    </children>

    <script type="text/brightscript" uri="MoreInfoModal.brs" />
</component>