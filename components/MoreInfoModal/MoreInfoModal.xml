<component name="MoreInfoModal" extends="Group">
    <interface>
        <!-- <field id="itemContent" type="node" onChange="showcontent"/>
        <field id="focusPercent" type="float" onChange="showfocus"/> -->
        <field id="title" type="string" onChange="onTitleChange" />
        <field id="backgroundColor" type="color" onChange="onBackgroundColorChange"/>
        <field id="mainColor" type="color" onChange="onMainColorChange"/>
        <field id="secondaryColor" type="color" onChange="onSecondaryColorChange"/>
        <field id="subtitle" type="string" onChange="onSubtitleChange" />
        <field id="workTitle" type="string" onChange="onWorkTitleChange" />
        <field id="notesArray" type="roArray" onChange="onNotesArrayChange"/>
        <field id="leftArray" type="roArray" />
        <field id="rightArray" type="roArray" />
    </interface>
    
    <children>
        <Rectangle
            id="background"
            width="1280"
            height="500"
        />
